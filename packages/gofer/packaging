#!/bin/bash

set -e
set -u

mkdir -p ${BOSH_INSTALL_TARGET}/bin
cp -a . ${BOSH_INSTALL_TARGET}/src

export GOROOT=$(readlink -nf /var/vcap/packages/golang)
export GOPATH=$BOSH_INSTALL_TARGET
export PATH=$GOROOT/bin:$GOPATH/bin:$PATH

# export GOPATH=$GOPATH:$PWD/github.com/containernetworking/cni/Godeps/_workspace

# go build -o ${BOSH_INSTALL_TARGET}/bin/gofer github.com/markstgodard/gofer/cni
# go build -o ${BOSH_INSTALL_TARGET}/bin/ovs github.com/markstgodard/gofer/cni/ovs
go install github.com/markstgodard/gofer/cni/ovs
